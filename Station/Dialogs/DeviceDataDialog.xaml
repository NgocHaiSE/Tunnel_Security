<ContentDialog
    x:Class="Station.Dialogs.DeviceDataDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Station.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    Title="Dữ liệu đo"
    CloseButtonText="Đóng"
    DefaultButton="Close"
    RequestedTheme="Dark"
  Background="{StaticResource MonitoringPanelBackgroundBrush}"
    BorderBrush="{StaticResource MonitoringBorderBrush}"
    CornerRadius="8"
    Padding="0">

    <ContentDialog.Resources>
        <!-- Chart Card Style -->
   <Style x:Key="ChartCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource MonitoringBackgroundBrush}"/>
<Setter Property="BorderBrush" Value="{StaticResource MonitoringBorderBrush}"/>
         <Setter Property="BorderThickness" Value="1"/>
         <Setter Property="CornerRadius" Value="6"/>
          <Setter Property="Padding" Value="16"/>
  <Setter Property="Margin" Value="0,0,0,16"/>
   </Style>

        <!-- Metric Value Style -->
        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
 <Setter Property="FontSize" Value="28"/>
  <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{StaticResource MonitoringTextPrimaryBrush}"/>
        </Style>

      <!-- Metric Label Style -->
        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
 <Setter Property="FontSize" Value="12"/>
     <Setter Property="Foreground" Value="{StaticResource MonitoringTextSecondaryBrush}"/>
         <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </ContentDialog.Resources>

    <!-- Main Grid with scrollable content -->
    <Grid MinWidth="800" MinHeight="600" MaxWidth="2000" MaxHeight="900">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="24">
 <StackPanel Spacing="20">
       <!-- Device Info Header -->
   <Border Background="{StaticResource MonitoringBackgroundBrush}"
     BorderBrush="{StaticResource MonitoringBorderBrush}"
          BorderThickness="1"
     CornerRadius="6"
       Padding="16">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
   <ColumnDefinition Width="*"/>
   <ColumnDefinition Width="Auto"/>
 </Grid.ColumnDefinitions>

 <!-- Device Icon -->
<Border Grid.Column="0"
         Background="{StaticResource MonitoringAccentButtonBrush}"
               CornerRadius="6"
  Width="48"
             Height="48"
         Margin="0,0,16,0">
          <FontIcon Glyph="&#xE957;"
  FontSize="24"
     Foreground="{StaticResource MonitoringTextPrimaryBrush}"
      HorizontalAlignment="Center"
  VerticalAlignment="Center"/>
      </Border>

   <!-- Device Info -->
<StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
     <TextBlock x:Name="DeviceNameText"
       Text="Sensor01"
             FontSize="16"
             FontWeight="SemiBold"
          Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
       <TextBlock x:Name="DeviceIdText"
         Text="SEN-001"
            FontSize="12"
          Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
   <TextBlock x:Name="LocationText"
     Text="A2 / R3 / N5"
               FontSize="11"
  Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
              </StackPanel>

        <!-- Time Range Selector -->
    <ComboBox Grid.Column="2"
     x:Name="TimeRangeComboBox"
          SelectedIndex="0"
        MinWidth="160"
           VerticalAlignment="Center">
     <ComboBoxItem Content="24 giờ qua"/>
           <ComboBoxItem Content="7 ngày qua"/>
                <ComboBoxItem Content="30 ngày qua"/>
     <ComboBoxItem Content="Tùy chỉnh"/>
   </ComboBox>
         </Grid>
     </Border>

  <!-- Charts Grid -->
      <Grid>
                <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
   <RowDefinition Height="Auto"/>
         <RowDefinition Height="Auto"/>
         </Grid.RowDefinitions>

            <!-- Temperature Card -->
      <Border Grid.Row="0" Style="{StaticResource ChartCardStyle}">
        <Grid>
           <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
    <Grid Grid.Row="0" Margin="0,0,0,16">
          <Grid.ColumnDefinitions>
 <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
  <ColumnDefinition Width="Auto"/>
     </Grid.ColumnDefinitions>

   <Border Grid.Column="0"
       Background="#3D1A1A"
   CornerRadius="6"
         Width="40"
            Height="40"
      Margin="0,0,12,0">
            <FontIcon Glyph="&#xE7A7;"
  FontSize="20"
  Foreground="{StaticResource MonitoringTempHighBrush}"
         HorizontalAlignment="Center"
VerticalAlignment="Center"/>
        </Border>

          <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
      <TextBlock Text="Nhiệt độ"
        FontSize="14"
 FontWeight="SemiBold"
              Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
         </StackPanel>

    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
    <TextBlock x:Name="TemperatureValue"
           Text="33.9"
       Style="{StaticResource MetricValueStyle}"
        Foreground="{StaticResource MonitoringTempHighBrush}"
   TextAlignment="Right"/>
              <TextBlock Text="°C"
        Style="{StaticResource MetricLabelStyle}"
         TextAlignment="Right"/>
          </StackPanel>
    </Grid>

      <!-- Chart -->
           <Border Grid.Row="1" Background="{StaticResource MonitoringPanelBackgroundBrush}"
           BorderBrush="{StaticResource MonitoringBorderBrush}"
     BorderThickness="1"
       CornerRadius="6"
                Padding="8"
             Height="250">
    <lvc:CartesianChart Series="{x:Bind TemperatureSeries, Mode=OneWay}"
         XAxes="{x:Bind TemperatureXAxes, Mode=OneWay}"
         YAxes="{x:Bind TemperatureYAxes, Mode=OneWay}"
 TooltipPosition="Top"/>
           </Border>

       <!-- Stats -->
     <Grid Grid.Row="2" Margin="0,12,0,0">
     <Grid.ColumnDefinitions>
                   <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
     </Grid.ColumnDefinitions>

                  <StackPanel Grid.Column="0">
        <TextBlock Text="Min"
          FontSize="10"
    Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
  <TextBlock x:Name="TempMin"
       Text="27.2°C"
      FontSize="13"
                  FontWeight="SemiBold"
               Foreground="{StaticResource MonitoringTextPrimaryBrush}"
    Margin="0,2,0,0"/>
          </StackPanel>

   <StackPanel Grid.Column="1">
 <TextBlock Text="Trung bình"
      FontSize="10"
            Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
       <TextBlock x:Name="TempAvg"
         Text="31.5°C"
              FontSize="13"
        FontWeight="SemiBold"
         Foreground="{StaticResource MonitoringTextPrimaryBrush}"
    Margin="0,2,0,0"/>
    </StackPanel>

               <StackPanel Grid.Column="2">
       <TextBlock Text="Max"
         FontSize="10"
         Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
      <TextBlock x:Name="TempMax"
                 Text="36.1°C"
          FontSize="13"
       FontWeight="SemiBold"
               Foreground="{StaticResource MonitoringTextPrimaryBrush}"
    Margin="0,2,0,0"/>
 </StackPanel>
        </Grid>
         </Grid>
      </Border>

         <!-- Humidity Card -->
         <Border Grid.Row="1" Style="{StaticResource ChartCardStyle}">
       <Grid>
           <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

       <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
     <ColumnDefinition Width="Auto"/>
 <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

   <Border Grid.Column="0"
     Background="#142038"
   CornerRadius="6"
        Width="40"
         Height="40"
    Margin="0,0,12,0">
         <FontIcon Glyph="&#xE753;"
   FontSize="20"
        Foreground="{StaticResource MonitoringAccentButtonBrush}"
        HorizontalAlignment="Center"
   VerticalAlignment="Center"/>
         </Border>

               <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
     <TextBlock Text="Độ ẩm"
  FontSize="14"
        FontWeight="SemiBold"
           Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
     </StackPanel>

           <StackPanel Grid.Column="2" HorizontalAlignment="Right">
         <TextBlock x:Name="HumidityValue"
     Text="85"
        Style="{StaticResource MetricValueStyle}"
                  Foreground="{StaticResource MonitoringAccentButtonBrush}"
     TextAlignment="Right"/>
    <TextBlock Text="%"
         Style="{StaticResource MetricLabelStyle}"
                 TextAlignment="Right"/>
          </StackPanel>
        </Grid>

 <!-- Chart -->
     <Border Grid.Row="1" Background="{StaticResource MonitoringPanelBackgroundBrush}"
        BorderBrush="{StaticResource MonitoringBorderBrush}"
    BorderThickness="1"
            CornerRadius="6"
            Padding="8"
          Height="250">
      <lvc:CartesianChart Series="{x:Bind HumiditySeries, Mode=OneWay}"
     XAxes="{x:Bind HumidityXAxes, Mode=OneWay}"
   YAxes="{x:Bind HumidityYAxes, Mode=OneWay}"
         TooltipPosition="Top"/>
         </Border>

           <!-- Stats -->
           <Grid Grid.Row="2" Margin="0,12,0,0">
    <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
<ColumnDefinition Width="*"/>
         </Grid.ColumnDefinitions>

             <StackPanel Grid.Column="0">
 <TextBlock Text="Min"
        FontSize="10"
   Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
      <TextBlock x:Name="HumidMin"
   Text="78%"
        FontSize="13"
       FontWeight="SemiBold"
   Foreground="{StaticResource MonitoringTextPrimaryBrush}"
          Margin="0,2,0,0"/>
          </StackPanel>

    <StackPanel Grid.Column="1">
  <TextBlock Text="Trung bình"
              FontSize="10"
    Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
        <TextBlock x:Name="HumidAvg"
            Text="87%"
            FontSize="13"
   FontWeight="SemiBold"
          Foreground="{StaticResource MonitoringTextPrimaryBrush}"
         Margin="0,2,0,0"/>
     </StackPanel>

     <StackPanel Grid.Column="2">
            <TextBlock Text="Max"
   FontSize="10"
    Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
  <TextBlock x:Name="HumidMax"
 Text="95%"
     FontSize="13"
        FontWeight="SemiBold"
         Foreground="{StaticResource MonitoringTextPrimaryBrush}"
      Margin="0,2,0,0"/>
            </StackPanel>
         </Grid>
           </Grid>
             </Border>

   <!-- Vibration Card -->
   <Border Grid.Row="2" Style="{StaticResource ChartCardStyle}">
     <Grid>
                   <Grid.RowDefinitions>
         <RowDefinition Height="Auto"/>
           <RowDefinition Height="Auto"/>
  <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

       <Grid Grid.Row="0" Margin="0,0,0,16">
         <Grid.ColumnDefinitions>
         <ColumnDefinition Width="Auto"/>
     <ColumnDefinition Width="*"/>
             <ColumnDefinition Width="Auto"/>
   </Grid.ColumnDefinitions>

               <Border Grid.Column="0"
            Background="#3D2E14"
     CornerRadius="6"
 Width="40"
           Height="40"
     Margin="0,0,12,0">
   <FontIcon Glyph="&#xE7F4;"
   FontSize="20"
  Foreground="{StaticResource MonitoringRadarWarningBrush}"
     HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
               </Border>

         <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
           <TextBlock Text="Rung động"
          FontSize="14"
          FontWeight="SemiBold"
           Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
               </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                  <TextBlock x:Name="VibrationValue"
              Text="2.4"
      Style="{StaticResource MetricValueStyle}"
       Foreground="{StaticResource MonitoringRadarWarningBrush}"
     TextAlignment="Right"/>
  <TextBlock Text="mm/s"
        Style="{StaticResource MetricLabelStyle}"
             TextAlignment="Right"/>
               </StackPanel>
        </Grid>

           <!-- Chart -->
  <Border Grid.Row="1" Background="{StaticResource MonitoringPanelBackgroundBrush}"
              BorderBrush="{StaticResource MonitoringBorderBrush}"
        BorderThickness="1"
       CornerRadius="6"
         Padding="8"
       Height="250">
          <lvc:CartesianChart Series="{x:Bind VibrationSeries, Mode=OneWay}"
   XAxes="{x:Bind VibrationXAxes, Mode=OneWay}"
           YAxes="{x:Bind VibrationYAxes, Mode=OneWay}"
                  TooltipPosition="Top"/>
                  </Border>

      <!-- Stats -->
             <Grid Grid.Row="2" Margin="0,12,0,0">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

       <StackPanel Grid.Column="0">
                <TextBlock Text="Min"
            FontSize="10"
       Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
       <TextBlock x:Name="VibMin"
            Text="0.8 mm/s"
        FontSize="13"
    FontWeight="SemiBold"
       Foreground="{StaticResource MonitoringTextPrimaryBrush}"
    Margin="0,2,0,0"/>
   </StackPanel>

               <StackPanel Grid.Column="1">
    <TextBlock Text="Trung bình"
               FontSize="10"
        Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
    <TextBlock x:Name="VibAvg"
            Text="1.9 mm/s"
          FontSize="13"
       FontWeight="SemiBold"
              Foreground="{StaticResource MonitoringTextPrimaryBrush}"
            Margin="0,2,0,0"/>
     </StackPanel>

                <StackPanel Grid.Column="2">
     <TextBlock Text="Max"
          FontSize="10"
         Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
  <TextBlock x:Name="VibMax"
                Text="4.2 mm/s"
   FontSize="13"
       FontWeight="SemiBold"
      Foreground="{StaticResource MonitoringTextPrimaryBrush}"
       Margin="0,2,0,0"/>
        </StackPanel>
          </Grid>
                 </Grid>
      </Border>

        <!-- Motion Card -->
               <Border Grid.Row="3" Style="{StaticResource ChartCardStyle}">
   <Grid>
              <Grid.RowDefinitions>
     <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
       <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
          <Grid.ColumnDefinitions>
           <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
           Background="#14332B"
        CornerRadius="6"
      Width="40"
      Height="40"
     Margin="0,0,12,0">
      <FontIcon Glyph="&#xE73E;"
     FontSize="20"
                  Foreground="{StaticResource MonitoringNodeNormalBrush}"
         HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        </Border>

    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
            <TextBlock Text="Chuyển động"
             FontSize="14"
           FontWeight="SemiBold"
        Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
  </StackPanel>

  <StackPanel Grid.Column="2" HorizontalAlignment="Right">
               <TextBlock x:Name="MotionValue"
    Text="12"
               Style="{StaticResource MetricValueStyle}"
 Foreground="{StaticResource MonitoringNodeNormalBrush}"
             TextAlignment="Right"/>
       <TextBlock Text="events"
   Style="{StaticResource MetricLabelStyle}"
          TextAlignment="Right"/>
           </StackPanel>
              </Grid>

           <!-- Chart -->
  <Border Grid.Row="1" Background="{StaticResource MonitoringPanelBackgroundBrush}"
 BorderBrush="{StaticResource MonitoringBorderBrush}"
    BorderThickness="1"
    CornerRadius="6"
                Padding="8"
    Height="250">
            <lvc:CartesianChart Series="{x:Bind MotionSeries, Mode=OneWay}"
         XAxes="{x:Bind MotionXAxes, Mode=OneWay}"
         YAxes="{x:Bind MotionYAxes, Mode=OneWay}"
         TooltipPosition="Top"/>
        </Border>

 <!-- Stats -->
         <Grid Grid.Row="2" Margin="0,12,0,0">
           <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
       </Grid.ColumnDefinitions>

   <StackPanel Grid.Column="0">
        <TextBlock Text="Hôm nay"
            FontSize="10"
     Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
        <TextBlock x:Name="MotionToday"
           Text="12"
      FontSize="13"
  FontWeight="SemiBold"
                   Foreground="{StaticResource MonitoringTextPrimaryBrush}"
 Margin="0,2,0,0"/>
      </StackPanel>

     <StackPanel Grid.Column="1">
      <TextBlock Text="Tuần này"
          FontSize="10"
        Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
          <TextBlock x:Name="MotionWeek"
    Text="87"
              FontSize="13"
              FontWeight="SemiBold"
       Foreground="{StaticResource MonitoringTextPrimaryBrush}"
      Margin="0,2,0,0"/>
          </StackPanel>

     <StackPanel Grid.Column="2">
        <TextBlock Text="Tháng này"
    FontSize="10"
            Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
    <TextBlock x:Name="MotionMonth"
         Text="342"
FontSize="13"
     FontWeight="SemiBold"
             Foreground="{StaticResource MonitoringTextPrimaryBrush}"
           Margin="0,2,0,0"/>
         </StackPanel>
  </Grid>
  </Grid>
      </Border>
  </Grid>
  </StackPanel>
    </ScrollViewer>
    </Grid>
</ContentDialog>
