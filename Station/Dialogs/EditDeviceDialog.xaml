<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Station.Dialogs.EditDeviceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Station.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Chỉnh sửa thiết bị"
    PrimaryButtonText="Lưu"
    CloseButtonText="Hủy"
    DefaultButton="Primary"
    RequestedTheme="Light"
    Background="{StaticResource BackgroundPrimaryBrush}"
    CornerRadius="12"
    Padding="24">

    <ScrollViewer MaxHeight="600" VerticalScrollBarVisibility="Auto" Width="400">
        <StackPanel Spacing="14" Margin="0,12,0,0">
            <StackPanel>

                <!-- Device Name -->
                <TextBlock Text="Tên thiết bị *"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,1"/>
                <TextBox x:Name="DeviceNameTextBox"
                         PlaceholderText="Nhập tên thiết bị"
                         Style="{StaticResource StandardTextBoxStyle}"
                         />
            </StackPanel>

            <StackPanel>

                <!-- Device ID (Read-only) -->
                <TextBlock Text="Mã thiết bị"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,1"/>
                <TextBox x:Name="DeviceIdTextBox"
                         IsEnabled="False"
                         Style="{StaticResource StandardTextBoxStyle}"/>
            </StackPanel>

            <!-- Network Configuration Section -->
            <!-- IP Address -->
            <StackPanel>
                <TextBlock Text="Địa chỉ IP"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,1"/>
                <TextBox x:Name="IpAddressTextBox"
                         PlaceholderText="192.168.1.100"
                         Style="{StaticResource StandardTextBoxStyle}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Loại thiết bị"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,1"/>
                <TextBox x:Name="TypeDisplayTextBox"
                         PlaceholderText="Loại thiết bị"
                         Style="{StaticResource StandardTextBoxStyle}"/>
            </StackPanel>

            <!-- Location -->
            <StackPanel>
                <TextBlock Text="Vị trí"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,1"/>
                <TextBox x:Name="LocationTextBox"
                         PlaceholderText="A1 / R1 / N1"
                         Style="{StaticResource StandardTextBoxStyle}"/>
            </StackPanel>

            <!-- Manufacturer -->
            <StackPanel>
                <TextBlock Text="Hãng sản xuất"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,1"/>
                <TextBox x:Name="ManufacturerTextBox"
                         PlaceholderText="Hikvision, Dahua, etc."
                         Style="{StaticResource StandardTextBoxStyle}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Thông tin phiên bản"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,1"/>
                <TextBox x:Name="FirmwareVersionTextBox"
                         PlaceholderText="V5.7.3"
                         Style="{StaticResource StandardTextBoxStyle}"/>
            </StackPanel>
        </StackPanel>

    </ScrollViewer>
</ContentDialog>
