<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="Station.Dialogs.EditDeviceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Station.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Chỉnh sửa thiết bị"
    PrimaryButtonText="Lưu"
    CloseButtonText="Hủy"
    DefaultButton="Primary"
    RequestedTheme="Dark"
    Background="{StaticResource MonitoringPanelBackgroundBrush}"
    BorderBrush="{StaticResource MonitoringBorderBrush}"
    CornerRadius="8"
    Padding="24">

    <ContentDialog.Resources>
        <!-- Dark TextBox Style -->
        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource MonitoringBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource MonitoringTextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MonitoringBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </ContentDialog.Resources>

    <ScrollViewer MaxHeight="600" VerticalScrollBarVisibility="Auto" Width="400">
        <StackPanel Spacing="14" Margin="0,12,0,0">
            <StackPanel>

                <!-- Device Name -->
                <TextBlock Text="Tên thiết bị *"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="DeviceNameTextBox"
                         PlaceholderText="Nhập tên thiết bị"
                         Style="{StaticResource DarkTextBoxStyle}"
                         />
            </StackPanel>

            <StackPanel>

                <!-- Device ID (Read-only) -->
                <TextBlock Text="Mã thiết bị"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="DeviceIdTextBox"
                         IsEnabled="False"
                         Style="{StaticResource DarkTextBoxStyle}"/>
            </StackPanel>

            <!-- Network Configuration Section -->
            <!-- IP Address -->
            <StackPanel>
                <TextBlock Text="Địa chỉ IP"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="IpAddressTextBox"
                         PlaceholderText="192.168.1.100"
                         Style="{StaticResource DarkTextBoxStyle}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Loại thiết bị"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="TypeDisplayTextBox"
                         PlaceholderText="Loại thiết bị"
                         Style="{StaticResource DarkTextBoxStyle}"/>
            </StackPanel>

            <!-- Location -->
            <StackPanel>
                <TextBlock Text="Vị trí"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="LocationTextBox"
                         PlaceholderText="A1 / R1 / N1"
                         Style="{StaticResource DarkTextBoxStyle}"/>
            </StackPanel>

            <!-- Manufacturer -->
            <StackPanel>
                <TextBlock Text="Hãng sản xuất"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="ManufacturerTextBox"
                         PlaceholderText="Hikvision, Dahua, etc."
                         Style="{StaticResource DarkTextBoxStyle}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Thông tin phiên bản"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                           Margin="0,0,0,6"/>
                <TextBox x:Name="FirmwareVersionTextBox"
                         PlaceholderText="V5.7.3"
                         Style="{StaticResource DarkTextBoxStyle}"/>
            </StackPanel>
        </StackPanel>

    </ScrollViewer>
</ContentDialog>
