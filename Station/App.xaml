<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Station.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Station.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ContentDialog Size Overrides -->
            <x:Double x:Key="ContentDialogMaxWidth">2000</x:Double>
            <x:Double x:Key="ContentDialogMaxHeight">1000</x:Double>

            <!-- Converters -->
            <converters:StringFormatConverter x:Key="StringFormatConverter"/>
            <converters:IndexToPositionConverter x:Key="IndexToPositionConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:RecordingTextConverter x:Key="RecordingTextConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
