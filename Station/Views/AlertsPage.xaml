<Page
    x:Class="Station.Views.AlertsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Station.ViewModels"
    Background="{StaticResource BackgroundSecondaryBrush}">

    <Grid>
        <!-- Header with Filters -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Filter Bar -->
        <Grid Grid.Row="0"
              Background="{StaticResource BackgroundSecondaryBrush}"
              Padding="24,16"
              BorderBrush="{StaticResource BorderLightBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Breadcrumb/Title -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="12"
                        VerticalAlignment="Center">
                <TextBlock Text="Trung tâm Cảnh báo"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
            </StackPanel>

            <!-- Filters -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="12"
                        VerticalAlignment="Center">

                <!-- Device Filter Button -->
                <Button MinWidth="180"
                        Style="{StaticResource FilterDropdownButtonStyle}"
                        x:Name="DeviceFilterButton">
                    <Button.Flyout>
                        <Flyout Placement="Bottom"
                                FlyoutPresenterStyle="{StaticResource DarkFlyoutPresenterStyle}"
                                x:Name="DeviceFlyout">
                            <ListView ItemsSource="{x:Bind ViewModel.Devices, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedDevice, Mode=TwoWay}"
                                      Style="{StaticResource FlyoutListViewStyle}"
                                      MinWidth="200"
                                      ItemClick="FilterListView_ItemClick">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource FlyoutListViewItemStyle}"/>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Flyout>
                    </Button.Flyout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE8EA;"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{x:Bind ViewModel.SelectedDevice, Mode=OneWay}"
                                   FontSize="13"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="8,0"/>
                        <FontIcon Grid.Column="2"
                                  Glyph="&#xE70D;"
                                  FontSize="10"
                                  Foreground="{StaticResource TextTertiaryBrush}"/>
                    </Grid>
                </Button>

                <!-- Severity Filter Button -->
                <Button MinWidth="180"
                        Style="{StaticResource FilterDropdownButtonStyle}"
                        x:Name="SeverityFilterButton">
                    <Button.Flyout>
                        <Flyout Placement="Bottom"
                                FlyoutPresenterStyle="{StaticResource DarkFlyoutPresenterStyle}"
                                x:Name="SeverityFlyout">
                            <ListView ItemsSource="{x:Bind ViewModel.SeverityFilters, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedSeverityFilter, Mode=TwoWay}"
                                      Style="{StaticResource FlyoutListViewStyle}"
                                      MinWidth="200"
                                      ItemClick="FilterListView_ItemClick">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource FlyoutListViewItemStyle}"/>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Flyout>
                    </Button.Flyout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE7BA;"
                                  FontSize="14"
                                  Foreground="{StaticResource SeverityMediumBrush}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{x:Bind ViewModel.SelectedSeverityFilter, Mode=OneWay}"
                                   FontSize="13"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="8,0"/>
                        <FontIcon Grid.Column="2"
                                  Glyph="&#xE70D;"
                                  FontSize="10"
                                  Foreground="{StaticResource TextTertiaryBrush}"/>
                    </Grid>
                </Button>

                <!-- Status Filter Button -->
                <Button MinWidth="180"
                        Style="{StaticResource FilterDropdownButtonStyle}"
                        x:Name="StatusFilterButton">
                    <Button.Flyout>
                        <Flyout Placement="Bottom"
                                FlyoutPresenterStyle="{StaticResource DarkFlyoutPresenterStyle}"
                                x:Name="StatusFlyout">
                            <ListView ItemsSource="{x:Bind ViewModel.StatusFilters, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedStatusFilter, Mode=TwoWay}"
                                      Style="{StaticResource FlyoutListViewStyle}"
                                      MinWidth="200"
                                      ItemClick="FilterListView_ItemClick">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource FlyoutListViewItemStyle}"/>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Flyout>
                    </Button.Flyout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE8F8;"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{x:Bind ViewModel.SelectedStatusFilter, Mode=OneWay}"
                                   FontSize="13"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="8,0"/>
                        <FontIcon Grid.Column="2"
                                  Glyph="&#xE70D;"
                                  FontSize="10"
                                  Foreground="{StaticResource TextTertiaryBrush}"/>
                    </Grid>
                </Button>
            </StackPanel>

            <!-- Notification Icon -->
            <Button Grid.Column="3"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Padding="12"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xEA8F;" FontSize="16"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Alerts List Container with Border -->
        <Border Grid.Row="1"
                Margin="24"
                Background="{StaticResource BackgroundPrimaryBrush}"
                CornerRadius="{StaticResource CornerRadiusLarge}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="1">
            <Grid Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Scrollable Alerts List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.FilteredAlerts, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BackgroundPrimaryBrush}"
                                        CornerRadius="{StaticResource CornerRadiusMedium}"
                                        Padding="20,16"
                                        Margin="0,0,0,12"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>


                                        <!-- Alert Content -->
                                        <StackPanel Grid.Column="1"
                                                    Spacing="8"
                                                    VerticalAlignment="Center">
                                            <!-- Title with Severity Badge -->
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center"/>
                                                <Border Background="{Binding SeverityBackgroundColor}"
                                                        CornerRadius="4"
                                                        Padding="8,3">
                                                    <TextBlock Text="{Binding SeverityText}"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"
                                                               Foreground="{Binding SeverityTextColor}"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Device & Location & Time - All in one line -->
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE8EA;"
                                                          FontSize="13"
                                                          Foreground="{StaticResource TextTertiaryBrush}"
                                                          VerticalAlignment="Center"/>
                                                <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="13"
                                                           VerticalAlignment="Center">
                                                    <Run Text="{Binding DeviceName}" FontWeight="SemiBold"/>
                                                    <Run Text=" • " Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <Run Text="{Binding Location}"/>
                                                    <Run Text=" • " Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <Run Text="{Binding TimeAgo}" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Status Badge with ComboBox -->
                                        <ComboBox Grid.Column="2"
                                                  ItemsSource="{Binding AvailableStatuses}"
                                                  SelectedItem="{Binding SelectedStatus, Mode=TwoWay}"
                                                  DisplayMemberPath="Text"
                                                  Style="{StaticResource ComboBoxStyle}"
                                                  VerticalAlignment="Center"
                                                  Margin="16,0"
                                                  SelectionChanged="StatusComboBox_SelectionChanged"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
