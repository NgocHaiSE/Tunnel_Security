<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    ====================================
    HN Security Color Palette
    ====================================
    Main Theme: Professional Blue
    Palette: Deep Blue, Sky Blue, Light Blue, Cream
    -->

    <!-- Primary Colors - Blue Theme -->
    <Color x:Key="PrimaryDark">#1E3A8A</Color>
    <Color x:Key="PrimaryMedium">#3B82F6</Color>
    <Color x:Key="PrimaryLight">#DBEAFE</Color>
    <Color x:Key="PrimaryCream">#F0F9FF</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#1E293B</Color>
    <Color x:Key="TextSecondary">#475569</Color>
    <Color x:Key="TextTertiary">#94A3B8</Color>

    <!-- Severity Colors -->
    <Color x:Key="SeverityLow">#22C55E</Color>
    <Color x:Key="SeverityMedium">#EAB308</Color>
    <Color x:Key="SeverityHigh">#F97316</Color>
    <Color x:Key="SeverityCritical">#EF4444</Color>

    <!-- Severity Light Colors -->
    <Color x:Key="SeverityLowLight">#DCFCE7</Color>
    <Color x:Key="SeverityMediumLight">#FEF9C3</Color>
    <Color x:Key="SeverityHighLight">#FFEDD5</Color>
    <Color x:Key="SeverityCriticalLight">#FEE2E2</Color>

    <!-- Status Colors -->
    <Color x:Key="StatusAcknowledged">#DBEAFE</Color>
    <Color x:Key="StatusUnacknowledged">#FEF9C3</Color>
    <Color x:Key="StatusProcessing">#3B82F6</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F8FAFC</Color>
    <Color x:Key="BackgroundAccent">#EFF6FF</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderPrimary">#3B82F6</Color>
    <Color x:Key="BorderSecondary">#BFDBFE</Color>
    <Color x:Key="BorderLight">#E2E8F0</Color>

    <!-- Button Colors -->
    <Color x:Key="ButtonPrimary">#1E3A8A</Color>
    <Color x:Key="ButtonPrimaryHover">#1E40AF</Color>
    <Color x:Key="ButtonPrimaryPressed">#1D4ED8</Color>
    <Color x:Key="ButtonSuccess">#22C55E</Color>
    <Color x:Key="ButtonSuccessHover">#16A34A</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryMediumBrush" Color="{StaticResource PrimaryMedium}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="PrimaryCreamBrush" Color="{StaticResource PrimaryCream}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>

    <SolidColorBrush x:Key="SeverityLowBrush" Color="{StaticResource SeverityLow}"/>
    <SolidColorBrush x:Key="SeverityMediumBrush" Color="{StaticResource SeverityMedium}"/>
    <SolidColorBrush x:Key="SeverityHighBrush" Color="{StaticResource SeverityHigh}"/>
    <SolidColorBrush x:Key="SeverityCriticalBrush" Color="{StaticResource SeverityCritical}"/>

    <SolidColorBrush x:Key="SeverityLowLightBrush" Color="{StaticResource SeverityLowLight}"/>
    <SolidColorBrush x:Key="SeverityMediumLightBrush" Color="{StaticResource SeverityMediumLight}"/>
    <SolidColorBrush x:Key="SeverityHighLightBrush" Color="{StaticResource SeverityHighLight}"/>
    <SolidColorBrush x:Key="SeverityCriticalLightBrush" Color="{StaticResource SeverityCriticalLight}"/>

    <SolidColorBrush x:Key="StatusAcknowledgedBrush" Color="{StaticResource StatusAcknowledged}"/>
    <SolidColorBrush x:Key="StatusUnacknowledgedBrush" Color="{StaticResource StatusUnacknowledged}"/>
    <SolidColorBrush x:Key="StatusProcessingBrush" Color="{StaticResource StatusProcessing}"/>

    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimary}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}"/>
    <SolidColorBrush x:Key="BackgroundAccentBrush" Color="{StaticResource BackgroundAccent}"/>

    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="{StaticResource BorderPrimary}"/>
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="{StaticResource BorderSecondary}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLight}"/>

    <SolidColorBrush x:Key="ButtonPrimaryBrush" Color="{StaticResource ButtonPrimary}"/>
    <SolidColorBrush x:Key="ButtonPrimaryHoverBrush" Color="{StaticResource ButtonPrimaryHover}"/>
    <SolidColorBrush x:Key="ButtonPrimaryPressedBrush" Color="{StaticResource ButtonPrimaryPressed}"/>
    <SolidColorBrush x:Key="ButtonSuccessBrush" Color="{StaticResource ButtonSuccess}"/>
    <SolidColorBrush x:Key="ButtonSuccessHoverBrush" Color="{StaticResource ButtonSuccessHover}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryDark}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryMedium}" Offset="0.33"/>
        <GradientStop Color="{StaticResource PrimaryLight}" Offset="0.66"/>
        <GradientStop Color="{StaticResource PrimaryCream}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Monitoring Dashboard Colors (4K Display)
    From rule.md specifications
    ====================================
    -->

    <!-- Dark Theme Colors -->
    <Color x:Key="MonitoringBackground">#0A0F17</Color>
    <Color x:Key="MonitoringPanelBackground">#111827</Color>
    <Color x:Key="MonitoringBorder">#1F2429</Color>
    <Color x:Key="MonitoringTextPrimary">#E6EEF3</Color>
    <Color x:Key="MonitoringTextSecondary">#9AA6B2</Color>
    <Color x:Key="MonitoringTempHigh">#F0625D</Color>
    <Color x:Key="MonitoringRadarWarning">#FFD166</Color>
    <Color x:Key="MonitoringNodeNormal">#3FCF8E</Color>
    <Color x:Key="MonitoringNodeOffline">#7B7E85</Color>
    <Color x:Key="MonitoringAccentButton">#2979FF</Color>

    <!-- Monitoring Brushes -->
    <SolidColorBrush x:Key="MonitoringBackgroundBrush" Color="{StaticResource MonitoringBackground}"/>
    <SolidColorBrush x:Key="MonitoringPanelBackgroundBrush" Color="{StaticResource MonitoringPanelBackground}"/>
    <SolidColorBrush x:Key="MonitoringBorderBrush" Color="{StaticResource MonitoringBorder}"/>
    <SolidColorBrush x:Key="MonitoringTextPrimaryBrush" Color="{StaticResource MonitoringTextPrimary}"/>
    <SolidColorBrush x:Key="MonitoringTextSecondaryBrush" Color="{StaticResource MonitoringTextSecondary}"/>
    <SolidColorBrush x:Key="MonitoringTempHighBrush" Color="{StaticResource MonitoringTempHigh}"/>
    <SolidColorBrush x:Key="MonitoringRadarWarningBrush" Color="{StaticResource MonitoringRadarWarning}"/>
    <SolidColorBrush x:Key="MonitoringNodeNormalBrush" Color="{StaticResource MonitoringNodeNormal}"/>
    <SolidColorBrush x:Key="MonitoringNodeOfflineBrush" Color="{StaticResource MonitoringNodeOffline}"/>
    <SolidColorBrush x:Key="MonitoringAccentButtonBrush" Color="{StaticResource MonitoringAccentButton}"/>

    <!-- Typography & Spacing -->
    <x:Double x:Key="FontSizeSmall">12</x:Double>
    <x:Double x:Key="FontSizeNormal">14</x:Double>
    <x:Double x:Key="FontSizeMedium">16</x:Double>
    <x:Double x:Key="FontSizeLarge">20</x:Double>
    <x:Double x:Key="FontSizeXLarge">24</x:Double>
    <x:Double x:Key="FontSizeXXLarge">32</x:Double>

    <x:Double x:Key="SpacingTiny">4</x:Double>
    <x:Double x:Key="SpacingSmall">8</x:Double>
    <x:Double x:Key="SpacingMedium">12</x:Double>
    <x:Double x:Key="SpacingLarge">16</x:Double>
    <x:Double x:Key="SpacingXLarge">20</x:Double>
    <x:Double x:Key="SpacingXXLarge">24</x:Double>

    <CornerRadius x:Key="CornerRadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">12</CornerRadius>

    <Thickness x:Key="BorderThicknessNormal">1</Thickness>
    <Thickness x:Key="BorderThicknessMedium">2</Thickness>

</ResourceDictionary>