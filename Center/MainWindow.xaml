<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Center.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Center"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:esri="using:Esri.ArcGISRuntime.UI.Controls"
    mc:Ignorable="d"
    Title="Center - Hệ thống giám sát trung tâm">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0"
                Background="#1E3A8A"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE707;" FontSize="24" Foreground="White"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="HỆ THỐNG GIÁM SÁT TRUNG TÂM"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Regional Security Monitoring System"
                                   FontSize="11"
                                   Foreground="#DBEAFE"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Info -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="16"
                            VerticalAlignment="Center">
                    <!-- Stations Count -->
                    <Border Background="#3B82F6"
                            CornerRadius="6"
                            Padding="12,6">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE957;" FontSize="16" Foreground="White"/>
                            <TextBlock Text="12 Trạm"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Alerts -->
                    <Border Background="#EF4444"
                            CornerRadius="6"
                            Padding="12,6">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7BA;" FontSize="16" Foreground="White"/>
                            <TextBlock Text="5 Cảnh báo"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Time -->
                    <TextBlock x:Name="TimeText"
                               Text="--:--:--"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Map Container -->
        <Grid Grid.Row="1">
            <!-- ArcGIS MapView -->
            <esri:MapView x:Name="MyMapView" />

            <!-- Map Controls Overlay -->
            <Grid>
                <!-- Top Left - Basemap Selector -->
                <StackPanel VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Margin="20"
                            Spacing="8">
                    <ComboBox x:Name="BasemapSelector"
                              SelectionChanged="BasemapSelector_SelectionChanged"
                              SelectedIndex="0"
                              MinWidth="180"
                              Background="White">
                        <ComboBoxItem Content="OpenStreetMap" Tag="OSM"/>
                        <ComboBoxItem Content="OSM Light Gray" Tag="OSMLight"/>
                        <ComboBoxItem Content="OSM Dark Gray" Tag="OSMDark"/>
                        <ComboBoxItem Content="Topographic" Tag="Topographic"/>
                        <ComboBoxItem Content="Streets" Tag="Streets"/>
                        <ComboBoxItem Content="Imagery" Tag="Imagery"/>
                    </ComboBox>
                </StackPanel>

                <!-- Bottom Right - Zoom Controls -->
                <StackPanel VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Margin="20"
                            Spacing="8">
                    <!-- Zoom In -->
                    <Button x:Name="ZoomInButton"
                            Click="ZoomInButton_Click"
                            Width="44"
                            Height="44"
                            Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="22"
                            ToolTipService.ToolTip="Phóng to">
                        <FontIcon Glyph="&#xE710;"
                                  FontSize="18"
                                  Foreground="#1E3A8A"/>
                    </Button>

                    <!-- Zoom Out -->
                    <Button x:Name="ZoomOutButton"
                            Click="ZoomOutButton_Click"
                            Width="44"
                            Height="44"
                            Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="22"
                            ToolTipService.ToolTip="Thu nhỏ">
                        <FontIcon Glyph="&#xE738;"
                                  FontSize="18"
                                  Foreground="#1E3A8A"/>
                    </Button>

                    <!-- Reset View -->
                    <Button x:Name="ResetButton"
                            Click="ResetButton_Click"
                            Width="44"
                            Height="44"
                            Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="22"
                            ToolTipService.ToolTip="Đặt lại vị trí">
                        <FontIcon Glyph="&#xE72C;"
                                  FontSize="18"
                                  Foreground="#1E3A8A"/>
                    </Button>

                    <!-- My Location -->
                    <Button x:Name="LocationButton"
                            Click="LocationButton_Click"
                            Width="44"
                            Height="44"
                            Background="White"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            CornerRadius="22"
                            ToolTipService.ToolTip="Vị trí của tôi">
                        <FontIcon Glyph="&#xE1D3;"
                                  FontSize="18"
                                  Foreground="#1E3A8A"/>
                    </Button>
                </StackPanel>

                <!-- Bottom Left - Legend -->
                <Border VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Margin="20"
                        Background="White"
                        CornerRadius="8"
                        Padding="16"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Chú thích"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#1E3A8A"/>

                        <!-- Active Station -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Width="12" Height="12" Fill="#22C55E"/>
                            <TextBlock Text="Trạm hoạt động" FontSize="12" Foreground="#475569"/>
                        </StackPanel>

                        <!-- Warning -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Width="12" Height="12" Fill="#EAB308"/>
                            <TextBlock Text="Cảnh báo" FontSize="12" Foreground="#475569"/>
                        </StackPanel>

                        <!-- Critical -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Width="12" Height="12" Fill="#EF4444"/>
                            <TextBlock Text="Nghiêm trọng" FontSize="12" Foreground="#475569"/>
                        </StackPanel>

                        <!-- Offline -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Width="12" Height="12" Fill="#94A3B8"/>
                            <TextBlock Text="Offline" FontSize="12" Foreground="#475569"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator -->
                <Border x:Name="LoadingOverlay"
                        Background="#80000000"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="16">
                        <ProgressRing x:Name="LoadingRing"
                                      IsActive="True"
                                      Width="60"
                                      Height="60"
                                      Foreground="#3B82F6"/>
                        <TextBlock Text="Đang tải bản đồ..."
                                   FontSize="16"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Vui lòng kiểm tra kết nối internet"
                                   FontSize="12"
                                   Foreground="#CCFFFFFF"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
