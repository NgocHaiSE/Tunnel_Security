<ContentDialog
    x:Class="Station.Dialogs.DeviceControlDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Station.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Quáº£n lÃ½ thiáº¿t bá»‹"
    CloseButtonText="ÄÃ³ng"
    DefaultButton="Close"
    RequestedTheme="Dark"
    Background="{StaticResource MonitoringPanelBackgroundBrush}"
    BorderBrush="{StaticResource MonitoringBorderBrush}"
    CornerRadius="8"
    Padding="0">

    <ContentDialog.Resources>
        <!-- Tab Item Style -->
        <Style x:Key="TabItemStyle" TargetType="TabViewItem">
            <Setter Property="Foreground" Value="{StaticResource MonitoringTextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Sensor Card Style -->
        <Style x:Key="SensorCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource MonitoringBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MonitoringBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Control Card Style -->
        <Style x:Key="ControlCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource MonitoringBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MonitoringBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Primary Action Button -->
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource MonitoringNodeNormalBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource MonitoringTextPrimaryBrush}"/>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="{StaticResource MonitoringNodeNormalBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource MonitoringTextPrimaryBrush}"/>
        </Style>
    </ContentDialog.Resources>

    <!-- Main Grid -->
    <Grid MinWidth="650" MinHeight="500" MaxWidth="750" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource MonitoringPanelBackgroundBrush}"
                BorderBrush="{StaticResource MonitoringBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Device Icon & Name -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <Border Width="48" Height="48"
                            Background="{StaticResource MonitoringNodeNormalBrush}"
                            CornerRadius="24">
                        <FontIcon Glyph="&#xE957;" FontSize="24"
                                  Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center" Spacing="4">
                        <TextBlock x:Name="DeviceNameText"
                                   Text="TÃªn thiáº¿t bá»‹"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                        <TextBlock x:Name="DeviceIdText"
                                   Text="ID: --"
                                   FontSize="12"
                                   Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Badge -->
                <Border Grid.Column="2"
                        x:Name="StatusBadge"
                        Background="#10B981"
                        CornerRadius="12"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <TextBlock Text="â— Online"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Border>
            </Grid>
        </Border>

        <!-- TabView Content -->
        <TabView Grid.Row="1"
                 x:Name="MainTabView"
                 Margin="24,16,24,24"
                 TabWidthMode="Equal"
                 IsAddTabButtonVisible="False"
                 CanDragTabs="False"
                 CanReorderTabs="False">

            <!-- Tab 1: Tá»•ng quan -->
            <TabView.TabItems>
                <TabViewItem Header="ðŸ“Š Tá»•ng quan" Style="{StaticResource TabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="12" Padding="0,8">
                            <!-- Device Info Card -->
                            <Border Style="{StaticResource ControlCardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="ThÃ´ng tin thiáº¿t bá»‹"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MonitoringTextPrimaryBrush}"
                                               Margin="0,0,0,12"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Battery -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4" Margin="0,0,0,12">
                                            <TextBlock Text="Pin" FontSize="12" Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
                                            <TextBlock x:Name="BatteryText" Text="--%" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- RSSI -->
                                        <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4" Margin="0,0,0,12">
                                            <TextBlock Text="TÃ­n hiá»‡u" FontSize="12" Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
                                            <TextBlock x:Name="RSSIText" Text="-- dBm" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- Last Online -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,0,0,12">
                                            <TextBlock Text="Trá»±c tuyáº¿n láº§n cuá»‘i" FontSize="12" Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
                                            <TextBlock x:Name="LastOnlineText" Text="--" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- Sensor Count -->
                                        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4" Margin="0,0,0,12">
                                            <TextBlock Text="Sá»‘ cáº£m biáº¿n" FontSize="12" Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
                                            <TextBlock x:Name="SensorCountText" Text="--" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Quick Actions -->
                            <Border Style="{StaticResource ControlCardStyle}">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Thao tÃ¡c nhanh"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- View Camera Button -->
                                        <Button Grid.Column="0"
                                                x:Name="ViewCameraButton"
                                                Style="{StaticResource PrimaryActionButtonStyle}"
                                                Click="ViewCameraButton_Click"
                                                Height="44">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon Glyph="&#xE714;" FontSize="16"/>
                                                <TextBlock Text="Xem Camera"/>
                                            </StackPanel>
                                        </Button>

                                        <!-- Power Toggle Button -->
                                        <ToggleButton Grid.Column="2"
                                                      x:Name="PowerToggle"
                                                      Height="44"
                                                      CornerRadius="6"
                                                      Checked="PowerToggle_Checked"
                                                      Unchecked="PowerToggle_Unchecked"
                                                      Style="{StaticResource ToggleButtonStyle}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon x:Name="PowerIcon" Glyph="&#xE7E8;" FontSize="16"/>
                                                <TextBlock x:Name="PowerText" Text="Báº­t"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabViewItem>

                <!-- Tab 2: Cáº£m biáº¿n -->
                <TabViewItem Header="ðŸ”¬ Cáº£m biáº¿n" Style="{StaticResource TabItemStyle}">
                    <Grid Padding="0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Sensors Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource MonitoringBackgroundBrush}"
                                BorderBrush="{StaticResource MonitoringBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,12">
                            <Grid>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE9D9;" FontSize="16" Foreground="{StaticResource MonitoringNodeNormalBrush}"/>
                                    <TextBlock x:Name="SensorHeaderText"
                                               Text="Äang táº£i cáº£m biáº¿n..."
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Sensors List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="SensorsItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource SensorCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Sensor Icon -->
                                                <Border Grid.Column="0"
                                                        Width="40"
                                                        Height="40"
                                                        CornerRadius="20"
                                                        Margin="0,0,12,0"
                                                        Background="{Binding IconBackground}">
                                                    <TextBlock Text="{Binding Icon}"
                                                               FontSize="20"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Sensor Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Type}"
                                                               FontSize="12"
                                                               Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
                                                </StackPanel>

                                                <!-- Sensor Value -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Spacing="2">
                                                    <TextBlock Text="{Binding Value}"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="{Binding ValueColor}"
                                                               TextAlignment="Right"/>
                                                    <TextBlock Text="{Binding Unit}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource MonitoringTextSecondaryBrush}"
                                                               TextAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabViewItem>

                <!-- Tab 3: Äiá»u khiá»ƒn -->
                <TabViewItem Header="âš™ï¸ Äiá»u khiá»ƒn" Style="{StaticResource TabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="12" Padding="0,8">
                            <!-- Power Control -->
                            <Border Style="{StaticResource ControlCardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
                                        <TextBlock Text="Nguá»“n Ä‘iá»‡n"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>
                                        <TextBlock Text="Báº­t/táº¯t thiáº¿t bá»‹ tá»« xa"
                                                   FontSize="12"
                                                   Foreground="{StaticResource MonitoringTextSecondaryBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12">
                                        <Button x:Name="PowerOnButton"
                                                Click="PowerOnButton_Click"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="#10B981">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE7E8;" FontSize="14"/>
                                                <TextBlock Text="Báº­t"/>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="PowerOffButton"
                                                Click="PowerOffButton_Click"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="#EF4444">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE7E8;" FontSize="14"/>
                                                <TextBlock Text="Táº¯t"/>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="RebootButton"
                                                Click="RebootButton_Click"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="#F59E0B">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                                <TextBlock Text="Khá»Ÿi Ä‘á»™ng láº¡i"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Device Settings -->
                            <Border Style="{StaticResource ControlCardStyle}">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="CÃ i Ä‘áº·t thiáº¿t bá»‹"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MonitoringTextPrimaryBrush}"/>

                                    <Button x:Name="EditDeviceButton"
                                            Click="EditDeviceButton_Click"
                                            Style="{StaticResource ActionButtonStyle}"
                                            HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                            <TextBlock Text="Chá»‰nh sá»­a cáº¥u hÃ¬nh"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- InfoBar for notifications -->
                            <InfoBar x:Name="NotificationBar"
                                     IsOpen="False"
                                     Severity="Success"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</ContentDialog>
